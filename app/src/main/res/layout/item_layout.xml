<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/small"
    android:layout_marginLeft="@dimen/small"
    android:layout_marginRight="@dimen/small"
    android:elevation="@dimen/item_elevation"
    app:cardCornerRadius="@dimen/corner_radius"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- from/to text -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_original"
                tools:text="No more switching between apps"
                style="@style/TextStyle.ListItem"/>

            <TextView
                android:id="@+id/text_translation"
                tools:text="Nicht mehr Umschalten zwischen Anwendungen "
                style="@style/TextStyle.ListItem.Translation"/>

        </LinearLayout>

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/normal"
            android:paddingLeft="@dimen/normal"
            android:paddingRight="@dimen/normal"
            android:background="@color/colorDivider" />

        <!-- icon bar -->
        <RelativeLayout
            android:paddingTop="@dimen/normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/action_play"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_play_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/action_delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>