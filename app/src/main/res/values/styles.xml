<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Spinner style -->
    <style name="SpinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--ProgressBar Round Endless-->
    <style name="progressbar_endless" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Text styles -->
    <style name="TextStyle">
        <!--<item name="android:fontFamily">sans-serif-thin</item>-->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.DiscoverTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/normal</item>
        <item name="android:paddingRight">@dimen/normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.DiscoverTextViewStyle.EditText">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@color/colorNeutral</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="TextStyle.FromFieldSmallText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorSecondaryBackground</item>
        <item name="android:layout_margin">@dimen/small</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/item_elevation</item>
    </style>


    <style name="TextStyle.ListItem">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextStyle.ListItem.Translation">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/small</item>
    </style>

</resources>
